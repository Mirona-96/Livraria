@model Livraria.Models.Domain.Editora
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Alterar Editora</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="EditoraNome">Nome da Editora*</label>
                    <input type="text" class="form-control" asp-for="EditoraNome" />
                    <span asp-validation-for="EditoraNome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cidade">Endereço da Editora*</label>
                    <input type="text" class="form-control" asp-for="Cidade" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">
                        <i class="bi bi-save"></i>
                        Salvar
                    </button>
                    <a asp-action="GetAll" class="btn btn-primary"><i class="bi bi-list"></i>Registos</a>
                </div>
            </form>
        </div>
    </div>
</div>