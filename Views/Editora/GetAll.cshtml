@model IEnumerable<Livraria.Models.Domain.Editora>
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" asp-action="Add">+ Adicionar Editora</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Editoras</h3>


            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>    
                        <th>Nome da Editora</th>
                        <th>Cidade</th>
                        <th>Acção</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.EditoraNome</td>
                            <td>@item.Cidade</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Editora" asp-action="Update" asp-route-id="@item.Id">
                                    <i class="bi bi-pen"></i>
                                </a> |
                                <a class="btn btn-danger" asp-controller="Editora" asp-action="Delete" asp-route-id="@item.Id"
                                   asp-route-returnUrl="@Url.Action("Index")"
                                   onclick="return confirm('Certeza que pretende eliminar?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>