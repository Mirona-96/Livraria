@model IEnumerable<Livraria.Models.Domain.Livro>
@{

}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-8">
            <a class="btn btn-dark" asp-action="Add">+ Adicionar Livro</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-13">
            <h3>Livros</h3>


            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>    
                        <th>Título</th>
                        <th>Género</th>
                        <th>Ano da Obra</th>
                        <th>Isbn</th>
                        <th>Número de Páginas</th>
                        <th>Autor</th>
                        <th>Editora</th>
                        <th>Preço</th>
                        <th>Acção</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Titulo</td>
                            <td>@item.GeneroTipo</td>
                            <td>@item.Ano</td>
                            <td>@item.Isbn</td>
                            <td>@item.PaginasTotal</td>
                            <td>@item.AutorNome</td>
                            <td>@item.EditoraNome</td>
                            <td>@item.PrecoLivro</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Livro" asp-action="Update" asp-route-id="@item.Id">
                                    <i class="bi bi-pen"></i>
                                </a> |
                                <a class="btn btn-danger" asp-controller="Livro" asp-action="Delete" asp-route-id="@item.Id"
                                   asp-route-returnUrl="@Url.Action("Index")"
                                   onclick="return confirm('Certeza que pretende eliminar?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>