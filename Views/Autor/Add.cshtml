@model Livraria.Models.Domain.Autor
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Adicionar Autor</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="AutorNome">Nome do Autor*</label>
                    <input type="text" class="form-control" asp-for="AutorNome"/>
                    <span asp-validation-for="AutorNome" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">
                        <i class="bi bi-save"></i>
                        Salvar
                    </button>
                    <a asp-action="GetAll" class="btn btn-primary"><i class="bi bi-list"></i>Registos</a>
                </div>
            </form>
        </div>
    </div>
</div>