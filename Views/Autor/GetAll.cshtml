@model IEnumerable<Livraria.Models.Domain.Autor>
@{

}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" asp-action="Add">+ Adicionar Autor</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <h3>Autores</h3>


            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>    
                        <th>Nome do Autor</th>
                        <th>Acção</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.AutorNome</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Autor" asp-action="Update" asp-route-id="@item.Id">
                                    <i class="bi bi-pen"></i>
                                </a> |
                                <a class="btn btn-danger" asp-controller="Autor" asp-action="Delete" asp-route-id="@item.Id"
                                   asp-route-returnUrl="@Url.Action("Index")"
                                   onclick="return confirm('Certeza que pretende eliminar?')">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>